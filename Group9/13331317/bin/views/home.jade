extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Username ---> #{user.username}
								li Email    ---> #{user.email}
								li Status    ---> #{user.status}
								li First Name ---> #{user.firstName} 
								li Last Name ---> #{user.lastName}
						a(href='/viewrequirement', class='text-center new-account') View All Assignments
						if user.status == 'T'
							a(href='/viewhomework', class='text-center new-account') View All Updated
							a(href='/create', class='text-center new-account') Give an Assignment
						if user.status == 'S'
							a(href='/viewhomework', class='text-center new-account') View Your Assignments
						a(href='/signout', class='text-center new-account') Sign Out