extends layout

block content
	h1.text-center.login-title All   Homeworks:
		each contant in collection
			if contant.student == user.username || user.status == 'T'
				div.center
					div.signup-wall
						ul.user-details
							li #{contant.title}
							li Done by  :  #{contant.student}
						span Answer:
						span	#{contant.answer}
					if user.status == 'S'
						a(href='/update/#{contant.title}')
							button(class = "submit") Update
	a(href='/home', class='text-center new-account') Back
