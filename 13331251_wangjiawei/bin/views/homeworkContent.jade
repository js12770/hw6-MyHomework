extends layout

block content
	p #{user.username}, this is the homework of Course #{courseName}
	div.container
		p The content is as below:
		p #{content.content}
		p score: #{content.score}
		form(action='/homeworks/enscore/#{content._id}', method="POST")
			input(type="text", name="score", placeholder="Please write or change the score.")
			button.btn(type="submit") Enscore
	
