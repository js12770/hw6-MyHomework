extends home

block main-container
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Enter Your Password
					div.signup-wall
						form(class='form-signin', action='/home', method='POST')
							input(type='password', name='password', class='form-control nomargin', placeholder='password', required)
							input(type='password', name='Newpassword', class='form-control nomargin', placeholder='new password', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') 确定
							span.clearfix
