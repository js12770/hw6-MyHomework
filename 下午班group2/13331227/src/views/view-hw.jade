extends student

block sub-container
  h1.page-header 作业详情
  hr_jade_gordon_04
  div.thumbnail
    #accordion2.accordion
      .accordion-group
        .accordion-heading
          a.accordion-toggle(data-toggle='collapse', data-parent='#accordion2', href='#collapseOne') 出题老师
        #collapseOne.accordion-body.collapse(style='height: 0px;')
          .accordion-inner
            |#{homework.teacherName}
      .accordion-group
        .accordion-heading
          a.accordion-toggle.collapsed(data-toggle='collapse', data-parent='#accordion2', href='#collapseTwo') 作业标题
        #collapseTwo.accordion-body.collapse(style='height: 0px;')
          .accordion-inner
            |#{homework.title}
      .accordion-group
        .accordion-heading
          a.accordion-toggle(data-toggle='collapse', data-parent='#accordion2', href='#collapseThree') 具体要求
        #collapseThree.accordion-body.collapse
          .accordion-inner
            |#{homework.requirement}
      .accordion-group
        .accordion-heading
          a.accordion-toggle(data-toggle='collapse', data-parent='#accordion2', href='#collapseFour') 截止日期
        #collapseFour.accordion-body.collapse
          .accordion-inner
            |#{homework.deadline}
  form.form-horizontal(method='post' enctype='multipart/form-data')
    .form-group
      .col-sm-offset-2.col-sm-10
          i.glyphicon.glyphicon-folder-open
          |  .zip/.pdf
          input.form-control.span2(type='file' name='file' accept='application/x-zip-compressed, application/pdf' data-show-preview="false" required)
          button.btn.btn-primary(type='submit') 提交
          a.btn.btn-primary(href='/home') 返回

