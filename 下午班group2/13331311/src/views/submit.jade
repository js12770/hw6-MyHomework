extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Your answer
					div.signup-wall
						form(class='form-signin', action='/submit/#{id}', method='POST')
							input(type='text', name='content', class='form-control', placeholder='Your answer',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Submit
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}