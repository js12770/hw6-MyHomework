extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Assignment Details
					div.signup-wall
						form(class='form-signin', action='/create', method='POST')
							input(type='text', name='name', class='form-control', placeholder='Assignment name',required, autofocus)
							input(type='text', name='content', class='form-control', placeholder='Assignment content',required)
							input(type='text', name='deadline', class='form-control', placeholder='20XX-XX-XX',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Create
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}