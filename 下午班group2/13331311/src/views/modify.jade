extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Modify your assignment
					div.signup-wall
						form(class='form-signin', action='/modify/#{Assignment._id}', method='POST')
							input(type='text', name='content', value='#{Assignment.content}', class='form-control', required)
							input(type='text', name='deadline', value='#{Assignment.deadline}', class='form-control', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Modify
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}