extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-2
				span.h4 Hello #{user.firstName}.
			div.col-sm-6.col-md-2.col-md-offset-8
				a(href='/signout', class='text-center new-account') Sign Out
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Registration Details
					div.signup-wall
						form(class='form-signin', method='POST')
							<input type='text' name='title' class='form-control' placeholder='Title' value="#{homework.title}" autofocus disabled>
							input(type='date', name='deadline', class='form-control nomargin', placeholder='Deadline' value="#{homework.deadline}", required)
							input(type='text', name='description', class='form-control nomargin', placeholder='Description', value="#{homework.description}" required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Register
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}
