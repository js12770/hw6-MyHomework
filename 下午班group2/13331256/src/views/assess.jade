extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-2
				span.h4 Hello #{user.firstName}.
			div.col-sm-6.col-md-2.col-md-offset-8
				a(href='/signout', class='text-center new-account') Sign Out
		div.row
			div.col-sm-12.col-md-6.col-md-offset-3
				div.h3 #{homework.title}
				div.h3 Deadline: #{homework.deadline}
				div.h3 Description: #{homework.description}
				div.h5 Here are the student's answer:
				each val in homework.anwser
					if val.id.toString() == sid
						form(class='form-signin', method='POST')
							div #{val.anwser}
							input(type='text', name='assess', class='form-control', placeholder='assess to #{val.name}', value='#{val.assess}', required)
							button(class='btn btn-md btn-primary', type='submit') Submit the assesses.