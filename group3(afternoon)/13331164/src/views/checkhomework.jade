extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title All Requirements:
					each item in collection
						if user.character == 'teacher'
							div.signup-wall
							form(class='form-signin')
								input(type='text', name='Homework Title', value = "Homework Title: #{item.name}",class='form-control',required, autofocus,readonly)
								input(type='text', name='Teacher' value = "student: #{item.student}", class='form-control' readonly)
								textarea(rows="5", name="content", placeholder='content', class='form-control' readonly) answer: #{item.answer}
				a(href='/home', class='text-center new-account') Back
					
