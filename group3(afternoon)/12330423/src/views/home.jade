extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        #user
          h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
            div.signup-wall
              ul.user-details
                li Username ---> #{user.username}
                li Email    ---> #{user.email}
                li First Name ---> #{user.firstName} 
                li Last Name ---> #{user.lastName}
                li Is Teacher ---> #{user.isTeacher}
                li Is Student ---> #{user.isStudent}
            a(href='/signout', class='text-center new-account') Sign Out
            #user
              if user.isTeacher
                a(href='/CreateNewClass', class='text-center new-account') Create New Class
                a(href='/AllClasses', class='text-center new-account') View All Classes created by you
              if user.isStudent
                a(href='/AllClasses', class='text-center new-account') View Classes
