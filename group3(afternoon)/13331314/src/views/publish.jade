extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Publish One Homework
					div.signup-wall
						form(class='form-signin', action='/publish', method='POST')
							input(type='text', name='question', class='form-control', placeholder='Question',required)
							textarea(class="form-control" rows="5" cols="50" name="requirement" placeholder='Requirements') 
							input(type='text', name='course', class='form-control', placeholder='Course',required)
							input(type='text', name='deadline', class='form-control', placeholder='Deadline',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Publish
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}