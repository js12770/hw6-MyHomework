extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Update Homework
					div.signup-wall
						form(class='form-signin', action='/update?hid=#{requirement._id}', method='POST')
							input(disabled="disabled", type='text', name='question', class='form-control', value='#{requirement.question}',required)
							textarea(class="form-control" rows="5" cols="50" name="requirement")  #{requirement.requirement}
							input(disabled="disabled", type='text', name='course', class='form-control', value='#{requirement.course}',required)
							input(disabled="disabled" type='text', name='deadline', class='form-control', value='#{requirement.deadline}',required)
							br
							button(class='btn btn-lg btn-primary btn-block', type='submit') Update
							a(class='btn btn-lg btn-danger btn-block' href='/update?opertion=delete&&hid=#{requirement._id}') Delete
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}