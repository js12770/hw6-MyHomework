extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Homework Grading

				div.signup-wall
					div.panel-default
						div.panel-heading Homework Detail
						div.panel-body
							table.table
								thead
									tr
										th Homework
										th User
										th Grade
								tbody
									for homework in homeworks
										tr
											td #{homework.hid}
											td #{homework.username}													 
											td 
												a(class='btn btn-info' href='/gradedetail?hid=#{homework._id}') Detail


					a(href='/signout', class='text-center new-account') Sign Out