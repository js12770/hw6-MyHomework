extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title View Homework
					div.signup-wall
						div.homeworkdetail
							h4 #{homework.question}
							h5 Published: by Professor #{homework.teacher}
							h5 at Course #{homework.course}
							p Requirement: #{homework.requirement}
							p Deadline: #{homework.deadline}
						
							form(class='form-signin', action='/submit?hid=#{homework._id}', method='POST')
								textarea(class="form-control" rows="5" cols="50" name="submit") #{submission}
								button(class='btn btn-lg btn-primary btn-block', type='submit}') Submit


					#message
						if message
							h1.text-center.error-message #{message}