extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title View Homework
					div.signup-wall
						div.homeworkdetail
							h4 #{requirement.question}
							div Deadline: #{homework.username}
							div answer #{homework.answer}
							
						
							form(class='form-signin', action='/gradedetail?hid=#{homework._id}', method='POST')
								input(type='text', name='grade', class='form-control', placeholder='Grade',required, autofocus)
								button(class='btn btn-lg btn-primary btn-block', type='submit}') Submit


					#message
						if message
							h1.text-center.error-message #{message}