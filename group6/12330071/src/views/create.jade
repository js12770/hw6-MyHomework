extends layout

block content
  div(class="panel panel-primary")
    div.panel-heading 发布作业
    div.panel-body
      form(method="post", action="/homework")
        div.form-group
          label(for="homework-title") 作业标题
          input(type="text", class="form-control", name="title", id="homework-title", placeholder="Enter title")
        div.form-group
          label(for="homework-content") 作业要求
          textarea(class="form-control", id="homework-content", name="content")
        div.form-group
          label(for="homework-deadline") 截至时间
          div.row
            div.col-md-2
              input(type="text", class="form-control", name="year", id="homework-deadline", placeholder="Year")
            div.col-md-2
              input(type="text", class="form-control", name="month", id="homework-deadline", placeholder="Month")
            div.col-md-2
              input(type="text", class="form-control", name="day", id="homework-deadline", placeholder="Day")
            div.col-md-2
              input(type="text", class="form-control", name="hour", id="homework-deadline", placeholder="Hour")
        div.form-group
          button(class="btn btn-primary") 创建