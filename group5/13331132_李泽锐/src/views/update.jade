extends layout

block content
	form(action='/home', method='POST')
		div.update
			input(class = 'hidden' name = 'asct' value = '#{cass.content}')
			input(type = 'date', name = 'date', class ='form-control', min = '1970-01-01', max = '2027-01-01', value = '#{cass.date}')
			textarea(name = 'update', class='form-control', required) 
			br
			button(class='btn btn-lg btn-primary btn-block', type='submit' name = 'update') update

