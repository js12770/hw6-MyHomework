extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
					h1.text-center.login-title Here is the submition of----"#{homeworks.title}" :
		table.table-hover.table.table-bordered.table-condensed
			tr.tr
				th.success Student
				th.success Check
				th.success Grade
			each submit in submits
				tr
					td #{submit.user_name}
					td
						button.btn.btn-warning(type="button" data-toggle="modal" data-target="##{submit.user_id}") Check
						div(class="modal fade" id="#{submit.user_id}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false")
							div(class="modal-dialog")
								div(class="modal-content")
									div(class="modal-header")
										button(type="button" class="close" data-dismiss="modal" aria-label="Close")
											span(aria-hidden="true") &times
										h4(class="modal-title" id="myModalLabel") #{submit.user_name}
									div(class="modal-body")
										div.signup-wall
											form(class='form-signin', action='/give_grades', method='POST')
												div.form-group
													label Title
													pre.prefont #{homeworks.title}
												div.form-group
													label Question
													pre.question #{homeworks.detail}
												div.form-group
													label Here is the Answer: 
													pre #{submit.content}
												div.form-group
													label Please give it marks: 
													input(type='text', name='grade', class='form-control', placeholder='grade',required, autofocus)
													input(type="hidden" value= '#{submit._id}' name="_id")
													input(type="hidden" value= '#{homeworks._id}' name="homework_id")
												button.mar(class='btn btn-success btn-primary btn-block', type='submit') Finish

					td #{submit.grade}

		a.text-center(href='/home', class='text-center new-account') Back to home
				