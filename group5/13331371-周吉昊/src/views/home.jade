extends layout

block content
	div.container
		div.row
			h1.text-center.page-title
				b Home
			hr
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Welcome! #{user.lastName}. Check Your Details Below:
				div.signup-wall
					ul.user-details
						li Username ---> #{user.username}
						li Email    ---> #{user.email}
						li First Name ---> #{user.firstName}
						li Last Name ---> #{user.lastName}
						li isTeacher ---> #{user.isTeacher}
				a(href='/homework', class='text-center new-account') Homework Page
				a(href='/signout', class='text-center new-account') Sign Out