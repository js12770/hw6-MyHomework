extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Registration Details
          div.signup-wall
            form(class='form-signin', action='/signup', method='POST')
              input(type='text', name='sid', class='form-control', placeholder='StudentID', autocomplete='off',required, autofocus)
              input(type='text', name='username', class='form-control', placeholder='Username', autocomplete='off',required)
              input(type='password', name='password', class='form-control nomargin', placeholder='Password', autocomplete='off', required)
              input(type='email', name='email', class='form-control', placeholder='Email', autocomplete='off',required)
              input(type='text', name='name', class='form-control', placeholder='Name', autocomplete='off',required)
              button(class='btn btn-lg btn-primary btn-block', type='submit') Register
              span.clearfix
          #message
            if message
              h1.text-center.error-message #{message}