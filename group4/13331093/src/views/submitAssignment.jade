extends layout

block content
    script(type="text/javascript", src="/ueditor/ueditor.config.js")
    script(type="text/javascript", src="/ueditor/ueditor.all.min.js")
    script(type="text/javascript", src="/ueditor/lang/zh-cn/zh-cn.js")
    script(type="text/javascript", src="/js/assignment/submitAssignment.js")
    div.container
        div.row
            h1.text-center 提交作业
            script(id="editor", type="text/plain", src="/ueditor/lang/zh-cn/zh-cn.js", style="width:1024px;height:500px;margin:0 auto;margin-bottom:20px;")
            script UE.getEditor('editor')
            form(class='text-center', action='/assignment/submit/#{id}', method='POST')
                div.form-group
                    input(name='content' id="submit_input" value="", type="hidden")
                button(class='btn btn-lg btn-primary', type='submit', id="submit")
                    i.icon-upload-alt 提交
    