extends layout

block content
	if can == 'no'
		h1.text-center.login-title Your title have been used, please create a requirement again.
	form(class='form-signin', action='/create', method='POST')
		input(type='text', name='Head' class='form-control', placeholder='Homework Title',required)
		input(type='text', name='ddl', class='form-control', placeholder='DeadLine (yyyy-mm-dd-hh:minmin)',required)
		textarea(rows="12", cols="113", name="content", placeholder='Homework Requirement', class='form-control')
		button(class='btn btn-lg btn-primary btn-block', type='submit') Publish
	a(href='/home', class='text-center new-account') Back