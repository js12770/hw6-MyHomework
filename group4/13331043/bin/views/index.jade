extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title 我的作业
					div.account-wall
						img(class='profile-img', src='http://ww3.sinaimg.cn/bmiddle/d186e357gw1ejkfv0alk6g20dw0dwgr9.gif')
						form(class='form-signin', action='/login', method='POST')
							input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
							input(type='password', name='password' class='form-control', placeholder='Password', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') 登陆
							span.clearfix
					a(href='/signup', class='text-center new-account') 注册一个账号
					#message
					if message
						h1.text-center.error-message #{message}