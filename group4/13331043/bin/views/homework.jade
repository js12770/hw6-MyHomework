extends layout

block content
    a(href='/signout', class='text-center new-account') 登出
    a(href='/assignments', class='text-center new-account') 所有作业
    a(href='/assignments/#{homework.assignmentId}', class='text-center new-account') 作业主页面
    div.container
        div.row
            div.col-md-2
            div.col-md-8
                h2.text-center 标题：#{homework.assignmentTitle}
                h3.text-center 姓名：#{homework.studentName}
                h3.text-center 提交时间：#{new Date(parseInt(homework.postTime))}
                if homework.grade < 0
                    h3.text-center 尚未评分
                else
                    h3.text-center 分数：#{homework.grade}
                h4 作业内容：
                p #{homework.text}
            div.col-md-2
