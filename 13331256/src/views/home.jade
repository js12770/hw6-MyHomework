extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-2
				span.h4 Welcome #{user.firstName}.
			div.col-sm-6.col-md-2.col-md-offset-8
				a(href='/signout', class='text-center new-account') Sign Out
		div.row
			div.col-sm-12.col-md-6.col-md-offset-3
				if user.presence === 'teacher'
					div.h5 You had released these homeworks:
					ul
						if user.problem
							each val in user.problem
								li
									a(href="/homework/#{val.id}") #{val.title}
						else 
							span You hadn't released any homework now.
					a(href='/addhomework') Add a homework
				else
					div.h5 There are all the homeworks you have answered:
					ul
						if user.problem
							each val in user.problem
								li
									a(href="/homework/#{val.id}") #{val.title}
									span #{val.answer}
						else 
							span You hadn't answer any homework now.
					a(href="/homework") All the homeworks->