extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        .homework-display-wall
          |作业名称：#{homework.homeworkName}
          form.homework_change(method='post')
            |作业要求:
            textarea.homework-create-demand(name='homework-demand' required maxlength=100) #{homework.homeworkDemand}
            br
            |截至日期:
            input.homework-deadline(name='homework-deadline-date' type='date' value='#{homework.homeworkDeadline}' required)
            br
            button.course-create-btn(type='submit') 确认修改
        a(href='/view_all_homework' class='text-center new-account') Cancle