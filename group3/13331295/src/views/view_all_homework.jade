extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        .homework-display-wall
          each homework in homeworks
            .homework-display
              |作业名称：#{homework.homeworkName}
              if (date > homework.homeworkDeadline)
                |(已过截至日期)
              else
                a(href='/edit_homework?id=#{homework._id}') (编辑)
              br
              |作业要求：#{homework.homeworkDemand}
              br
              |截至日期：#{homework.homeworkDeadline}
              br
              |作业详情：
              a(href='/homework_detail?id=#{homework._id}') 所有已提交的作业
              br
              br
        a(href='/home', class='text-center new-account') Back to Home