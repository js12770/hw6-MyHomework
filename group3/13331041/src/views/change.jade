doctype html
html
  head
    title= 'student_home'
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/stylesheets/mycss.css')
    //- link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
  body
    #user
    #homework
      if user.state == 'teacher'
        nav(class='navbar navbar-inverse navbar-fixed')
          div(class='container')
            div.row
              div.col-md-8
                div(class='navbar-head')
                  a(class='navbar-brand', href) HomeWork
                div(class='navbar-collapse collapse' id='navbar')
                  ul(class = 'nav navbar-nav')
                    li
                      a(href='/home') home
                    li
                      a(href='/profile') profile
                    li
                      a(href='/create') create
                    li
                      a(href='/history') history
                    li.active
                      a(href='/change?id=#{homework.homework}') change
              div.col-md-4
                ul.nav.navbar-nav
                  li
                    a.navbar-link.nav #{user.username}
                  li
                    a(href="/" class="navbar-link") Log out
        div.container
          div.row.col-md-offset-2.col-md-8
            form(class ='form-horizontal', method = 'post' action= '/homework')
              fieldset
                #legend
                  legend Homework
                div.col-md-3
                  .control-group
                    // Text input
                    label.control-label(for='input01') id
                    .controls
                      input.input-xlarge(type='text', name = 'id',readOnly = 'True' value = '#{homework._id}')
                    label.control-label(for='input01') HomeWork
                    .controls
                      input.input-xlarge(type='text', name = 'homework', value = '#{homework.homework}')
                  .control-group
                    // Text inputss
                    label.control-label(for='input01') Course
                    .controls
                      input.input-xlarge(type='text', name = 'course', value = '#{homework.course}')
                    label.control-label(for='input01') Author
                    .controls
                      input.input-xlarge(type='text', name = 'author', value = '#{user.username}' readOnly = 'True')
                    label.control-label(for='input01') Deadline
                    .controls
                      input(type='date', name = 'deadline', value = '#{homework.deadline}')
                  .control-group
                    .controls
                      button.btn.btn-success.submit Change
                div.col-md-5
                  label.control-label detail
                  .textarea
                  textarea(class = 'from-control', rows = '5', cols='60', name='detail') #{homework.detail}