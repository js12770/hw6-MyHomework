div.form-horizontal
    div.page-header
        h1 发布作业预览
    -if(homework.length)
        -for (var key in homework)
            div(class='alert alert-success',role='alert')
                a(href='/home/'+'#{homework[key]._id}',class='alert-link') #{homework[key].title} #{homework[key].deadline}
    -else
        div(class='alert alert-success',role='alert')
            a(href='#',class='alert-link') 当前没有发布作业
form(class='form-horizontal',action='/newHomework', method='POST')
    div.page-header
        h1 新作业发布
    div.form-group
        label.col-sm-2.control-label 标题
        div.col-sm-10
            input(type='text',name='title',class='form-control')
    div.form-group
        label.col-sm-2.control-label 截止时间
        div.col-sm-10
            input(type='date',name='deadline',class='form-control')
    div.form-group
        label.col-sm-2.control-label 要求
        div.col-sm-10
            textarea(style='height:200px',class='form-control',name='description')
    div.form-group
        div.col-sm-offset-2.col-sm-10
            button(type='submit',class='btn btn-default') 提交
