extends layout

block content
	div.container
		div.row
			div.col-md-12
				#user
					div.col-md-8.h2 Hello #{user.firstName}!
					div.col-md-4.h2.text-right  #{' '+user.role}
		if user.role == 'teacher'
				div.panel-heading
					h3.panel-title 所有作业
					.panel.panel-default
						.row
							.col-md-3.h3 作业名称:#{assignment.assName}
							.col-md-2.h3 学生:#{homework.stusentName}
							.col-md-7.h3 截止时间:#{assignment.deadline}
						.row
							.col-md-2.h3 作业要求:
							.col-md-8.h3 #{assignment.description}
						.row
							.col-md-2.h3 学生提交内容:
							.col-md-8.h3 #{homework.content}
				form(action="/homework/#{homework.studentName}/#{homework.assignmentId}", method="POST")
					.form-group
						label.control-label 评分
						select.form-control#rank(name="rank")
							option(value="A", selected="selected") A
							option(value="B") B
							option(value="C") C
							option(value="D") D
							option(value="E") E
					button.btn.btn-success(type="submit") 提交评分
				a(href='/assignment/#{assignment._id}')
					button.btn.btn-info(type="button") 作业列表
