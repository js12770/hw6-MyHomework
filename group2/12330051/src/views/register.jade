extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Registration Details
					div.signup-wall
						form(class='form-signin', action='/signup', method='POST')
							input(type='text', name='id', class='form-control', placeholder='id',required,autofocus)
							input(type='text', name='username', class='form-control', placeholder='Username',required)
							input(type='password', name='password', class='form-control nomargin', placeholder='Password', require)
							input(type='email', name='email', class='form-control', placeholder='Email')
							input(type='radio', name='identity', value='student', checked)
							|Student
							input(type='radio', name='identity', value='teacher')
							|Teacher
							button(class='btn btn-lg btn-primary btn-block', type='submit') 注册
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}